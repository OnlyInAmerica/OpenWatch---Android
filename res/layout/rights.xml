        
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/linearLayout1"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ffffff" >
        <ImageView
   		android:id="@+id/stripey"
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content" 
	    android:src="@drawable/stripey" />
        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:orientation="horizontal" 
            android:layout_marginBottom="10dp">
            
            <ImageView
                android:id="@+id/aclu"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:src="@drawable/aclu_logo_small" />

            <RelativeLayout
                android:id="@+id/relativeLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/aclu"
                android:orientation="vertical" >
            
            <TextView
                android:id="@+id/PoliceTape"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="Know Your Rights"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#000000"
                android:textSize="28dp"
                android:textStyle="bold" />
				
	    </RelativeLayout>
        </RelativeLayout>
		<TableLayout
            android:id="@+id/TableLayout02"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvMoreInfo"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:padding="0dp" >

        <TableRow
            android:layout_width="wrap_content"
            android:gravity="center"
            android:padding="0dp" >

            <RelativeLayout
                android:id="@+id/carLayout"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:layout_marginRight="30dp" >

                <ImageView
                    android:id="@+id/cariv"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/car" />

                <TextView
                    android:id="@+id/cartv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cariv"
                    android:layout_centerHorizontal="true"
                    android:layout_span="2"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:singleLine="false"
                    android:text="Car"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/homeLayout"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" 
                android:layout_marginRight="30dp">

                <ImageView
                    android:id="@+id/homeiv"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/home" />

                <TextView
                    android:id="@+id/hometv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/homeiv"
                    android:layout_centerHorizontal="true"
                    android:layout_span="2"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:singleLine="false"
                    android:text="Home"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/questioningLayout"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:layout_marginRight="30dp" >

                <ImageView
                    android:id="@+id/questioningiv"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/questioning" />

                <TextView
                    android:id="@+id/questioningtv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/questioningiv"
                    android:layout_centerHorizontal="true"
                    android:layout_span="2"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:singleLine="false"
                    android:text="Stop"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/arrestLayout"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/arrestiv"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/arrest" />

                <TextView
                    android:id="@+id/arresttv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/arrestiv"
                    android:layout_centerHorizontal="true"
                    android:layout_span="2"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:singleLine="false"
                    android:text="Arrest"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </TableRow>

    </TableLayout>
        
