
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/linearLayout1"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ffffff" >
        
        <ImageView
   		android:id="@+id/stripey"
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content" 
	    android:src="@drawable/stripey" />
        
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/linearLayout1"
        android:orientation="vertical"
        android:padding="5dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff" >
		
        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:orientation="horizontal" >
            
            <ImageView
                android:id="@+id/aclu"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:src="@drawable/aclu_logo_small" />

            <RelativeLayout
                android:id="@+id/relativeLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/aclu"
                android:orientation="vertical" >
            
            <TextView
	                android:id="@+id/PoliceTape"
	                android:layout_marginTop="10dp"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_alignParentTop="true"
	                android:layout_centerHorizontal="true"
	                android:text="Police Tape"
	                android:textAppearance="?android:attr/textAppearanceLarge"
	                android:textColor="#000000"
	                android:textSize="28dp"
	                android:textStyle="bold" />
				
	            <TextView
	                android:id="@+id/PoliceTapeTag"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_below="@+id/PoliceTape"
	                android:layout_centerHorizontal="true"
	                android:text="Powered by OpenWatch"
	                android:textAppearance="?android:attr/textAppearanceLarge"
	                android:textColor="#000000"
	                android:textSize="14dp"
	                android:textStyle="italic" />
	    </RelativeLayout>
        </RelativeLayout>
        
        <ScrollView
	    android:orientation="vertical"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    >
            	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		        android:id="@+id/linearLayout1"
		        android:orientation="vertical"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content">
	            
            	    <TextView
            	        android:id="@+id/About"
            	        android:layout_width="wrap_content"
            	        android:layout_height="wrap_content"
            	        android:layout_centerHorizontal="true"
            	        android:layout_gravity="center"
            	        android:text="About ACLU-NJ"
            	        android:textAppearance="?android:attr/textAppearanceLarge"
            	        android:textColor="#000000"
            	        android:textSize="24dp"
            	        android:textStyle="bold" />

					<TextView
	                android:id="@+id/Disclaimer"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_centerInParent="true"
	                android:layout_centerHorizontal="true"
	                android:text="@string/aboutaclu"
	                android:textAppearance="?android:attr/textAppearanceLarge"
	                android:textColor="#000000"
	                android:textSize="14dp"
	                android:paddingBottom="10dp"
	                />
					
				</LinearLayout>
		</ScrollView>

	</LinearLayout>

		<Button
		    android:id="@+id/donateb"
		    android:layout_width="250dip"
		    android:layout_height="60dip"
		    android:layout_below="@+id/nob"
		    android:layout_gravity="center_horizontal"
		    android:background="@drawable/button"
		    android:ellipsize="none"
		    android:padding="10dip"
		    android:shadowColor="#ffffff"
		    android:shadowDy="-1"
		    android:shadowRadius="1"
		    android:singleLine="true"
		    android:text="Donate to the ACLU"
		    android:textAppearance="?android:attr/textAppearanceMedium"
		    android:textColor="#000000" />

    </LinearLayout>
